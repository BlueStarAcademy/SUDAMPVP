<!-- 좌측 사이드바 토글 버튼 (프로필 + 채팅) -->
<button class="mobile-sidebar-toggle-left" id="mobileSidebarToggleLeft" title="프로필 & 채팅">
    <span class="toggle-icon">◀</span>
</button>

<!-- 우측 사이드바 토글 버튼 (랭킹보드) -->
<button class="mobile-sidebar-toggle-right" id="mobileSidebarToggleRight" title="랭킹보드">
    <span class="toggle-icon">▶</span>
</button>

<!-- 좌측 사이드바 드로어 (프로필 + 채팅) -->
<div class="mobile-sidebar-drawer-left" id="mobileSidebarDrawerLeft">
    <div class="mobile-sidebar-overlay-left" id="mobileSidebarOverlayLeft"></div>
    <div class="mobile-sidebar-wrapper-left" id="mobileSidebarWrapperLeft">
        <!-- 프로필과 채팅은 JavaScript로 동적으로 채워질 예정 -->
    </div>
</div>

<!-- 우측 사이드바 드로어 (랭킹보드) -->
<div class="mobile-sidebar-drawer-right" id="mobileSidebarDrawerRight">
    <div class="mobile-sidebar-overlay-right" id="mobileSidebarOverlayRight"></div>
    <div class="mobile-sidebar-wrapper-right" id="mobileSidebarWrapperRight">
        <!-- 랭킹보드는 JavaScript로 동적으로 채워질 예정 -->
    </div>
</div>

