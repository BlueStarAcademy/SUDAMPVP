            <input type="text" class="chat-input" id="chatInput" placeholder="메시지 입력..." maxlength="200">
            <div class="chat-countdown" id="chatCountdown" style="display: none;">3</div>
        </div>
        <button class="chat-send-btn" id="chatSendBtn">전송</button>
