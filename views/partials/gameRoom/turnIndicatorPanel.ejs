<!-- Turn Indicator Panel -->
<div class="info-panel turn-indicator-panel">
    <div class="panel-title">
        <div class="panel-title-text">수순</div>
    </div>
    <div class="turn-indicator-sidebar" id="turnIndicator">
        <div class="turn-color-stone" id="turnColor">
            <img src="/images/black-stone.webp" alt="흑" class="stone-image black-stone" style="display: none;" onerror="this.style.display='none'; this.parentElement.innerHTML='<span class=&quot;stone-fallback black&quot;>●</span>';">
            <img src="/images/white-stone.webp" alt="백" class="stone-image white-stone" style="display: none;" onerror="this.style.display='none'; this.parentElement.innerHTML='<span class=&quot;stone-fallback white&quot;>○</span>';">
        </div>
        <div class="turn-number" id="turnNumber">0</div>
    </div>
</div>

