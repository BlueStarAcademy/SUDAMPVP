        let currentUserStatus = 'waiting'; // ÌòÑÏû¨ Ïú†Ï†ÄÏùò ÏÉÅÌÉúÎ•º Ï∂îÏ†Å

        // DOM Elements
        const ongoingGamesList = document.getElementById('ongoingGamesList');
