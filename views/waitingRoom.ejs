        let isMatching = false;

        // Ï†ÑÏ≤¥ Î†àÏù¥ÏïÑÏõÉ Ïä§ÏºÄÏùºÎßÅ Ìï®Ïàò
        function scaleLayout() {
            const container = document.querySelector('.container');
            if (!container) return;
            
            // Ïù¥ÎØ∏ Ïä§ÏºÄÏùºÎßÅ Ï§ëÏù¥Î©¥ Î¨¥Ïãú (Ï§ëÎ≥µ Ïã§Ìñâ Î∞©ÏßÄ)
            if (isScaling) {
                return;
            }
            
            isScaling = true; // Ïä§ÏºÄÏùºÎßÅ ÏãúÏûë

            // Î®ºÏ†Ä Ïä§ÏºÄÏùºÏùÑ Ï†úÍ±∞ÌïòÏó¨ Ïã§Ï†ú ÌÅ¨Í∏∞ Ï∏°Ï†ï
            container.style.transform = 'scale(1)';
            container.style.width = '1600px';
            container.style.height = 'auto';
            
            // Í∞ïÏ†úÎ°ú Î¶¨ÌîåÎ°úÏö∞Î•º Î∞úÏÉùÏãúÏºú Ï†ïÌôïÌïú ÌÅ¨Í∏∞ Ï∏°Ï†ï
            void container.offsetHeight;
            
            // Ïã§Ï†ú Ïª®ÌÖåÏù¥ÎÑà ÌÅ¨Í∏∞ Ï∏°Ï†ï (Ïä§ÏºÄÏùº ÏóÜÏù¥)
            const baseWidth = 1600; // Í∏∞Ï§Ä ÎÑàÎπÑ
            
            // Ïã§Ï†ú ÎÜíÏù¥ Ï∏°Ï†ï (Ïä§ÌÅ¨Î°§ ÎÜíÏù¥ÏôÄ Ïò§ÌîÑÏÖã ÎÜíÏù¥ Ï§ë Îçî ÌÅ∞ Í∞í ÏÇ¨Ïö©)
            const scrollHeight = container.scrollHeight;
            const offsetHeight = container.offsetHeight;
            const actualHeight = Math.max(scrollHeight, offsetHeight);
            const baseHeight = Math.max(actualHeight, 800); // ÏµúÏÜå 800px Î≥¥Ïû•
            
            const viewportWidth = window.innerWidth;
            const viewportHeight = window.innerHeight;
            
            // ÏµúÏÜå Ïä§ÏºÄÏùº Ï†úÌïú (ÎÑàÎ¨¥ ÏûëÏïÑÏßÄÏßÄ ÏïäÎèÑÎ°ù)
            const minScale = 0.3;
            // ÏµúÎåÄ Ïä§ÏºÄÏùº Ï†úÌïú
            const maxScale = 1.0;
            
            // ÏÇ¨Ïö© Í∞ÄÎä•Ìïú Í≥µÍ∞Ñ Í≥ÑÏÇ∞ (Ìó§ÎçîÏôÄ Ïó¨Î∞± Í≥†Î†§)
            const header = document.querySelector('header');
            const headerHeight = header ? header.offsetHeight : 80;
            const padding = 40;
            const availableWidth = Math.max(viewportWidth - padding, baseWidth * minScale);
            const availableHeight = Math.max(viewportHeight - headerHeight - padding - 20, baseHeight * minScale);
            
            // ÎÑàÎπÑÏôÄ ÎÜíÏù¥ Î™®Îëê Í≥†Î†§ÌïòÏó¨ Ïä§ÏºÄÏùº Í≥ÑÏÇ∞
            const scaleX = availableWidth / baseWidth;
            const scaleY = availableHeight / baseHeight;
            
            // Îçî ÏûëÏùÄ Ïä§ÏºÄÏùºÏùÑ ÏÇ¨Ïö©ÌïòÏó¨ Ï†ÑÏ≤¥Í∞Ä ÌôîÎ©¥Ïóê Îì§Ïñ¥Ïò§ÎèÑÎ°ù
            let scale = Math.min(scaleX, scaleY);
            
            // Ïä§ÏºÄÏùº Ï†úÌïú Ï†ÅÏö©
            scale = Math.max(Math.min(scale, maxScale), minScale);
            
            // Ïª®ÌÖåÏù¥ÎÑàÏóê Ïä§ÏºÄÏùº Ï†ÅÏö©
            container.style.transform = `scale(${scale})`;
            container.style.transformOrigin = 'top center';
            container.style.width = `${baseWidth}px`;
            container.style.height = 'auto';
            
            // Ïä§ÏºÄÏùºÎêú ÌÅ¨Í∏∞ Í≥ÑÏÇ∞
            const scaledWidth = baseWidth * scale;
            const scaledHeight = baseHeight * scale;
            
            // Ïª®ÌÖåÏù¥ÎÑàÍ∞Ä Ï§ëÏïôÏóê Ïò§ÎèÑÎ°ù
            if (scaledWidth < viewportWidth) {
                container.style.marginLeft = 'auto';
                container.style.marginRight = 'auto';
            } else {
                container.style.marginLeft = '0';
                container.style.marginRight = '0';
            }
            
            // body ÎÜíÏù¥Î•º Ïä§ÏºÄÏùºÎêú ÎÜíÏù¥Ïóê ÎßûÏ∂∞ Ï°∞Ï†ï (Ïä§ÌÅ¨Î°§ Í∞ÄÎä•ÌïòÎèÑÎ°ù)
            const totalHeight = scaledHeight + headerHeight + 100; // Ïó¨Ïú† Í≥µÍ∞Ñ Ï∂îÍ∞Ä
            document.body.style.minHeight = `${Math.max(totalHeight, viewportHeight)}px`;
            
            // Ïä§ÏºÄÏùºÎßÅ ÏôÑÎ£å
            isScaling = false;
            
            // ÎîîÎ≤ÑÍπÖÏö© (Í∞úÎ∞ú ÌôòÍ≤ΩÏóêÏÑúÎßå) - Ï£ºÏÑù Ï≤òÎ¶¨ÌïòÏó¨ Î¨¥Ìïú Î°úÍ∑∏ Î∞©ÏßÄ
            // if (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1') {
            //     console.log('Scale Layout:', {
            //         baseWidth,
            //         baseHeight,
            //         viewportWidth,
            //         viewportHeight,
            //         scaleX,
            //         scaleY,
            //         scale,
            //         scaledWidth,
            //         scaledHeight
            //     });
            // }
        }

        // Ï¥àÍ∏∞ Ïä§ÏºÄÏùºÎßÅ Î∞è Î¶¨ÏÇ¨Ïù¥Ï¶à Ïù¥Î≤§Ìä∏ Î¶¨Ïä§ÎÑà
        let resizeTimeout;
        let scaleTimeout;
        let isScaling = false; // Ïä§ÏºÄÏùºÎßÅ Ï§ë ÌîåÎûòÍ∑∏
        
        // ÌéòÏù¥ÏßÄ Î°úÎìú ÌõÑ ÏïΩÍ∞ÑÏùò ÏßÄÏó∞ÏùÑ ÎëêÍ≥† Ïã§Ìñâ (Î†àÏù¥ÏïÑÏõÉÏù¥ ÏôÑÏ†ÑÌûà Î†åÎçîÎßÅÎêú ÌõÑ)
        window.addEventListener('load', () => {
            setTimeout(scaleLayout, 200);
        });
        
        // Î¶¨ÏÇ¨Ïù¥Ï¶à Ïù¥Î≤§Ìä∏ (ÎîîÎ∞îÏö¥Ïã±)
        window.addEventListener('resize', () => {
            clearTimeout(resizeTimeout);
            resizeTimeout = setTimeout(scaleLayout, 100);
        });
        
        // DOMContentLoaded ÏãúÏóêÎèÑ Ïã§Ìñâ
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', () => {
                setTimeout(scaleLayout, 200);
            });
        } else {
            // ÏïΩÍ∞ÑÏùò ÏßÄÏó∞ÏùÑ ÎëêÍ≥† Ïã§ÌñâÌïòÏó¨ Î†àÏù¥ÏïÑÏõÉÏù¥ ÏôÑÏ†ÑÌûà Î†åÎçîÎßÅÎêú ÌõÑ Ïä§ÏºÄÏùº Ï†ÅÏö©
            setTimeout(scaleLayout, 200);
        }
        
        // Ïª®ÌÖêÏ∏† Î≥ÄÍ≤Ω ÏãúÏóêÎèÑ Ïä§ÏºÄÏùº Ïû¨Í≥ÑÏÇ∞ (ÎèôÏ†Å Ïª®ÌÖêÏ∏† ÎåÄÏùë)
        const observer = new MutationObserver((mutations) => {
            // Ïä§ÏºÄÏùºÎßÅ Ï§ëÏù¥Î©¥ Î¨¥Ïãú (Î¨¥ÌïúÎ£®ÌîÑ Î∞©ÏßÄ)
            if (isScaling) {
                return;
            }
            
            // Ïù¥Î™®ÏßÄ ÌåùÏóÖÏù¥ÎÇò stats Î™®Îã¨Ïùò Î≥ÄÍ≤ΩÏÇ¨Ìï≠ÏùÄ Î¨¥Ïãú
            let shouldIgnore = false;
            for (const mutation of mutations) {
                const target = mutation.target;
                if (target && (
                    target.id === 'emojiPopup' ||
                    target.closest('#emojiPopup') ||
                    target.id === 'statsModal' ||
                    target.closest('#statsModal') ||
                    target.closest('.stats-modal-content') ||
                    target.closest('.ai-battle-modal')
                )) {
                    shouldIgnore = true;
                    break;
                }
                // Ïä§ÌÉÄÏùº Î≥ÄÍ≤ΩÏù¥ scaleLayoutÏóê ÏùòÌïú Í≤ÉÏù∏ÏßÄ ÌôïÏù∏
                if (mutation.type === 'attributes' && mutation.attributeName === 'style') {
                    // containerÏùò transform Î≥ÄÍ≤ΩÏùÄ Î¨¥Ïãú
                    if (target === container || target.closest('.container') === container) {
                        const style = target.getAttribute('style');
                        if (style && style.includes('transform')) {
                            shouldIgnore = true;
                            break;
                        }
                    }
                }
            }
            
            if (!shouldIgnore) {
                clearTimeout(scaleTimeout);
                scaleTimeout = setTimeout(scaleLayout, 300);
            }
        });
        
        // Ïª®ÌÖåÏù¥ÎÑàÏùò ÏûêÏãù ÏöîÏÜå Î≥ÄÍ≤Ω Í∞êÏßÄ (style ÏÜçÏÑ±ÏùÄ Ï†úÏô∏ÌïòÏó¨ Î¨¥ÌïúÎ£®ÌîÑ Î∞©ÏßÄ)
        const container = document.querySelector('.container');
        if (container) {
            observer.observe(container, {
                childList: true,
                subtree: true,
                attributes: true,
                attributeFilter: ['class'] // style Ï†úÏô∏ÌïòÏó¨ Î¨¥ÌïúÎ£®ÌîÑ Î∞©ÏßÄ
            });
        }

        // Socket Events
        // ÎåÄÍ∏∞Ïã§ ÌÉÄÏûÖ ÌôïÏù∏
        const currentRoomType = '<%= typeof roomType !== "undefined" ? roomType : "strategy" %>';
        
        socket.on('connect', () => {
            console.log('Socket connected, joining room:', currentRoomType);
            // ÎåÄÍ∏∞Ïã§ ÌÉÄÏûÖÏóê ÎßûÎäî Î£∏Ïóê Ï°∞Ïù∏
            socket.emit('join_waiting_room', currentRoomType);
            
            // Ï¥àÍ∏∞ Îç∞Ïù¥ÌÑ∞ Î°úÎìú Ìï®Ïàò
            function loadInitialData() {
                console.log('Requesting initial data...');
                socket.emit('get_user_list', currentRoomType);
                socket.emit('get_ongoing_games');
                socket.emit('get_rankings');
            }
            
            // Ï¶âÏãú Î°úÎìú ÏãúÎèÑ
            loadInitialData();
            
            // ÏïΩÍ∞ÑÏùò ÏßÄÏó∞ ÌõÑ Ïû¨ÏãúÎèÑ (ÏÑúÎ≤ÑÍ∞Ä Ï§ÄÎπÑÎêòÏßÄ ÏïäÏïòÏùÑ Ïàò ÏûàÏùå)
            setTimeout(loadInitialData, 100);
            setTimeout(loadInitialData, 500);
        });
        
        // Ïó∞Í≤∞ Ïã§Ìå® Ïãú Ïû¨Ïó∞Í≤∞ ÏãúÎèÑ
        socket.on('connect_error', (error) => {
            console.error('Socket connection error:', error);
            // Ïó∞Í≤∞ Ïã§Ìå®Ìï¥ÎèÑ Í∏∞Î≥∏ Îç∞Ïù¥ÌÑ∞Îäî Ïù¥ÎØ∏ ÌëúÏãúÎêòÏñ¥ ÏûàÏùå
        });
        
        // Ïû¨Ïó∞Í≤∞ ÏÑ±Í≥µ Ïãú
        socket.on('reconnect', () => {
            console.log('Socket reconnected');
            socket.emit('join_waiting_room', currentRoomType);
            setTimeout(() => {
                socket.emit('get_user_list', currentRoomType);
                socket.emit('get_ongoing_games');
                socket.emit('get_rankings');
            }, 100);
        });

        // ÏÇ¨Ïö©Ïûê Î™©Î°ù ÏóÖÎç∞Ïù¥Ìä∏
        socket.on('user_list_update', (users) => {
            console.log('User list update received:', users);
            if (!users) {
                console.error('user_list_update received null or undefined');
                renderOnlineUsers([]);
                return;
            }
            if (!Array.isArray(users)) {
                console.error('user_list_update received non-array:', typeof users);
                renderOnlineUsers([]);
                return;
            }
            // ÌòÑÏû¨ Ïú†Ï†ÄÏùò ÏÉÅÌÉú ÏóÖÎç∞Ïù¥Ìä∏ (users Î∞∞Ïó¥ÏóêÏÑú Ï∞æÍ∏∞)
            const currentUserInList = users.find(user => user && user.id === currentUserId);
            if (currentUserInList && currentUserInList.status) {
                currentUserStatus = currentUserInList.status;
            }
            renderOnlineUsers(users);
